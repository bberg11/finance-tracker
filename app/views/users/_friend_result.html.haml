.mb-4
  = render 'layouts/messages'

- if @friends
  .card.card-header.mb-4.col-9
    %table
      %tbody
        - @friends.each do |friend|
          %tr
            %td
              %strong Name:
              = friend.full_name
            %td
              %strong Email:
              = friend.email
            %td
              %strong Actions:
              = link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-success'
              - if current_user.not_friends_with?(friend.id)
                = link_to 'Follow friend?', friendships_path(friend: friend), class: 'btn btn-sm btn-success', method: :post
              - else
                %span.badge.badge-secondary You are friends
